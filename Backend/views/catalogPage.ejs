<% include common/header.ejs %>
<div class="main-container">
    <div class="gallery">
        <!--/ Codrops top bar -->

        <div class="adding-form">

            <div class="row">
                <div class="col-lg-12">
                    <div class="container">
                        <div class="form_hover">
                            <header class="clearfix">
                                <h1 style="text-align: center;">Наш каталог</h1>

                                <h3 style="text-align: center;"> Обирай зображення, що тобі сподобалося. <br>Клікай та знаходь книгу, що чекає саме на тебе.
                                    <br> Хочеш додати свою книгу? Тисни на плюсик :)
                                </h3>
                            </header>
                            <div class="header">
                                <div class="blur"></div>
                                <div class="header-text">
                                    <div class="panel panel-default">

                                        <div class="panel-heading">
                                            <button type="button" class="btn btn-default add"><span
                                                        class="glyphicon glyphicon-plus"></span>
                                            </button>
                                        </div>

                                        <div class="panel-body">

                                            <div class="form-inline">
                                                <div class="form-group status col-sm-6 col-sm-6">
                                                    <input type="text" class="form-control   input-lg" id="title"
                                                           placeholder="Назва">
                                                </div>
                                                <div class="form-group status col-sm-6 col-sm-6">
                                                    <input type="text" class="form-control  input-lg" id="author"
                                                           placeholder="Автор">
                                                </div>
                                            </div>
                                            <div class="form-group status col-sm-12 col-sm-12">
                                                <input type="text" class="form-control  input-lg" id="link"
                                                       placeholder="Лінк на вашу сторінку в соцмережах">
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
        <div class="main ">
            <ul id="og-grid" class="og-grid">
                <div id="books_menu"></div>
                <div id="cart"></div>
            </ul>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script src="js/grid.js"></script>
